<h1>Devices</h1>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @devices.each do |d| %>
  <tr>
    <td><%= d.name %></td>
    <td><%= d.description %></td>
  </tr>
<% end %>
</table>
