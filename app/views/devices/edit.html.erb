<% provide(:title, "Edit device") %>
<h2>Update device</h2>

<div class="row">
  <div class="span4 offset4">
    <%= form_for(@device) do |d| %>
      <%= d.label :name %>
      <%= d.text_field :name %>

      <%= d.label :description %>
      <%= d.text_field :description %>
      
      <%= d.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>